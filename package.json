{
  "name": "horde-breaker",
  "version": "0.1.0",
  "description": "Side-scrolling action game with a prestige/upgrade loop.",
  "scripts": {
    "dev": "vite",
    "build": "oxlint --type-aware --type-check && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "format": "oxfmt --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "oxfmt --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "oxlint --type-aware --type-check",
    "test:e2e": "playwright test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xanticious/horde-breaker.git"
  },
  "keywords": [],
  "author": "",
  "type": "module",
  "bugs": {
    "url": "https://github.com/xanticious/horde-breaker/issues"
  },
  "homepage": "https://github.com/xanticious/horde-breaker#readme",
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource/cinzel": "^5.2.8",
    "@statelyai/inspect": "^0.4.0",
    "@xstate/react": "^6.0.0",
    "howler": "^2.2.4",
    "pixi.js": "^8.16.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "xstate": "^5.28.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/howler": "^2.2.12",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-plugin-react-compiler": "^1.0.0",
    "jsdom": "^28.1.0",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
